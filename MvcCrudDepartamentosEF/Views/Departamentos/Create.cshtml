<h1>Crear departamento</h1>

<a asp-controller="Departamentos" asp-action="Index"
   class="btn btn-secondary w-100 my-3">Volver al Index</a>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Num Dept</label>
        <input type="number" class="form-control" name="deptno" />
    </div>
    <div class="mt-3">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" name="dnombre" />
    </div>
    <div class="mt-3">
        <label class="form-label">Localidad</label>
        <input type="text" class="form-control" name="localidad" />
    </div>
    <button class="btn btn-success w-100 mt-3">Crear nuevo departamento</button>
</form>